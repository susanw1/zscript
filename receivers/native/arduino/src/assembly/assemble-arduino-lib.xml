<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>for-arduino</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${project.build.resources[0].directory}/library-setup</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/nar/${artifact.artifactId}-${artifact.version}-noarch/include/arduino-converter-files</directory>
            <outputDirectory>/src/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/nar/${artifact.artifactId}-${artifact.version}-noarch/include/examples</directory>
            <outputDirectory>/examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/nar/${artifact.artifactId}-${artifact.version}-noarch/include/arduino</directory>
            <outputDirectory>/src/arduino</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/nar/generic-receiver-core-${generic-core-version}-noarch/include/zcode</directory>
            <outputDirectory>/src/zcode</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.zscript</groupId>
        <artifactId>zscript-receivers-native</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>zscript-receivers-arduino</artifactId>
    <packaging>nar</packaging>
    <name>Zscript Arduino Receiver</name>

    <properties>
        <generic-core-version>${project.version}</generic-core-version>
        <arduino-build-test-skip>true</arduino-build-test-skip>

        <cpu>atmega328p</cpu>
        <cpp-warnings>-Wall -Wno-long-long -Wpointer-arith</cpp-warnings>
        <cpp-optimizations>-Os</cpp-optimizations>

        <arduino-deploy-path>${user.home}/.arduino15/packages/arduino</arduino-deploy-path>
        <arduino-gcc-path>${arduino-deploy-path}/tools/avr-gcc/7.3.0-atmel3.6.1-arduino7/bin</arduino-gcc-path>
        <arduino-cores-path>${arduino-deploy-path}/hardware/avr/1.8.6/cores/arduino</arduino-cores-path>
        <arduino-libraries-path>${arduino-deploy-path}/hardware/avr/1.8.6/libraries</arduino-libraries-path>
        <arduino-variants-path>${arduino-deploy-path}/hardware/avr/1.8.6/variants</arduino-variants-path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>net.zscript</groupId>
            <artifactId>generic-receiver-core</artifactId>
            <version>${generic-core-version}</version>
            <type>nar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <skip>${arduino-build-test-skip}</skip>
                    <architecture>avr</architecture>
                    <os>arduino</os>
                    <cpp>
                        <name>g++</name>
                        <prefix>avr-</prefix>
                        <toolPath>${arduino-gcc-path}</toolPath>
                        <exceptions>false</exceptions>
                        <debug>true</debug>
                        <sourceDirectory>src/main/c++</sourceDirectory>
                        <testSourceDirectory>src/test/c++</testSourceDirectory>

                        <includePaths>
                            <includePath>
                                <path>${project.basedir}/src/main/c++</path>
                            </includePath>
                        </includePaths>

                        <testIncludePaths>
                            <includePath>
                                <path>${project.basedir}/src/main/c++/arduino-converter-files</path>
                            </includePath>
                            <includePath>
                                <path>${arduino-cores-path}</path>
                            </includePath>
                            <includePath>
                                <path>${arduino-libraries-path}/Wire/src</path>
                            </includePath>
                            <includePath>
                                <path>${arduino-variants-path}/eightanaloginputs</path>
                            </includePath>
                        </testIncludePaths>

                        <optionSet>${cpp-warnings} ${cpp-optimizations}</optionSet>
                        <options>
                            <option>-std=gnu++11</option>
                            <option>-CC</option>
                            <option>-mmcu=${cpu}</option>
                            <option>-ffunction-sections</option>
                            <option>-fdata-sections</option>
                            <option>-fno-threadsafe-statics</option>
                        </options>
                        <defines>
                            <define>ARDUINO=10819</define>
                            <define>ARDUINO_AVR_NANO</define>
                            <define>ARDUINO_ARCH_AVR</define>
                            <define>F_CPU=16000000L</define>
                        </defines>
                    </cpp>

                    <linker>
                        <name>ld</name>
                        <prefix>avr-</prefix>
                        <toolPath>${arduino-gcc-path}</toolPath>
                    </linker>

                    <tests>
                        <test>
                            <name>I2cChannelDemo</name>
                            <link>none</link>
                            <run>false</run>
                        </test>
                    </tests>
                </configuration>
            </plugin>
            
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>Zscript</finalName>
                    <descriptors>
                        <descriptor>src/assembly/assemble-arduino-lib.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-arduino-lib</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
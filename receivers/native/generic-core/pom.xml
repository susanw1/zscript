<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.zscript</groupId>
        <artifactId>zscript-receivers-native1</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>generic-receiver-core</artifactId>
    <packaging>nar</packaging>
    <name>Zscript Generic C++ Receiver Core</name>

    <properties>
        <build-native-gcc.skip>true</build-native-gcc.skip>
    </properties>

    <dependencies>
        <dependency>
            <groupId>net.zscript</groupId>
            <artifactId>zscript-cpp-model-components</artifactId>
            <version>${project.version}</version>
            <type>nar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>net.zscript.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <skip>${build-native-gcc.skip}</skip>
                    <cpp>
                        <name>gcc</name>
                        <debug>true</debug>
                        <includePaths>
                            <includePath>
                                <path>${project.basedir}/src/main/c++</path>
                                <includes>**/*.hpp</includes>
                            </includePath>
                        </includePaths>
                        <options>
                            <option>-flto</option>
                            <option>-g</option>
                            <option>-Wall</option>
                            <option>-fno-exceptions</option>
                            <option>-Wextra</option>
                            <option>-m32</option>
                        </options>
                        <testOptions>
                            <testOption>-fexceptions</testOption>
                            <testOption>-m32</testOption>
                        </testOptions>
                    </cpp>
                    <linker>
                        <name>g++</name>
                        <options>
                            <option>-m32</option>
                        </options>
                    </linker>
                    <libraries>
                        <library>
                            <type>static</type>
                        </library>
                    </libraries>
                    <tests>
                        <test>
                            <name>default-cli</name>
                            <link>static</link>
                            <run>false</run>
                        </test>
                        <test>
                            <name>ZscriptTokenizerTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>ZscriptTokenBufferReaderTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>SemanticParserTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>SemanticParserMulticommandTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>SemanticParserAddressingTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>SemanticParserTokenWaitTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>SemanticParserAsyncCommandTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>NotificationTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                        <test>
                            <name>ScriptSpaceTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                    </tests>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <!--                         run with mvn [-pl receivers/native/generic-core] exec:exec@default-cli -->
                        <id>default-cli</id>
                        <configuration>
                            <executable>${project.build.directory}/test-nar/bin/amd64-Linux-gpp/default-cli</executable>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>build-native</id>
            <properties>
                <build-native-gcc.skip>false</build-native-gcc.skip>
            </properties>
        </profile>
        <profile>
            <id>build-arduino</id>
            <properties>
                <build-native-gcc.skip>false</build-native-gcc.skip>
            </properties>
        </profile>
        <profile>
            <id>build-arm</id>
            <properties>
                <build-native-gcc.skip>false</build-native-gcc.skip>
            </properties>
        </profile>
    </profiles>
</project>

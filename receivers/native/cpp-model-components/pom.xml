<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.zscript</groupId>
        <artifactId>zscript-receivers-native</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>zscript-cpp-model-components</artifactId>
    <packaging>nar</packaging>
    <name>C++ Model Components (Generated)</name>

    <properties>
        <generated-code-path>${project.build.directory}/generated-sources/zscript/c++</generated-code-path>
        <build-native-gcc.skip>true</build-native-gcc.skip>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>net.zscript.maven</groupId>
                <artifactId>mustache-templating-maven-plugin</artifactId>
                <version>0.0.1-SNAPSHOT</version>

                <dependencies>
                    <dependency>
                        <groupId>net.zscript</groupId>
                        <artifactId>zscript-model-mustache-templating-adapter</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>net.zscript</groupId>
                        <artifactId>zscript-model-schema</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>net.zscript</groupId>
                        <artifactId>zscript-model-standard-module-definitions</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>

                <configuration>
                    <outputDirectory>${generated-code-path}</outputDirectory>
                    <templatingMapperClass>net.zscript.model.templating.adapter.ZscriptModuleTemplatingPluginMapper</templatingMapperClass>
                    <fileTypeSuffix>hpp</fileTypeSuffix>
                </configuration>

                <executions>
                    <execution>
                        <id>templating-zchars-cpp</id>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <configuration>
                            <mainTemplate>CppZchars.mustache</mainTemplate>
                            <contexts>
                                <includes>zchars-list.yaml</includes>
                            </contexts>
                        </configuration>
                    </execution>
                    <execution>
                        <id>templating-zstatus-cpp</id>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <configuration>
                            <mainTemplate>CppZscriptStatus.mustache</mainTemplate>
                            <contexts>
                                <includes>zstatus-list.yaml</includes>
                            </contexts>
                        </configuration>
                    </execution>
                    <execution>
                        <id>templating-modules-cpp</id>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                        <configuration>
                            <mainTemplate>CppCommandKeyDefs.mustache</mainTemplate>
                            <contexts>
                                <directory>classpath:/zscript-datamodel/</directory>
                                <includes>module-list.yaml</includes>
                            </contexts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>net.zscript.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <skip>${build-native-gcc.skip}</skip>
                    <cpp>
                        <name>gcc</name>
                        <debug>true</debug>
                        <includePaths>
                            <includePath>
                                <path>${generated-code-path}</path>
                                <includes>**/*.hpp</includes>
                            </includePath>
                        </includePaths>
                        <options>
                            <option>-flto</option>
                            <option>-g</option>
                            <option>-Wall</option>
                            <option>-fno-exceptions</option>
                            <option>-Wextra</option>
                            <option>-m32</option>
                        </options>
                        <testOptions>
                            <testOption>-fexceptions</testOption>
                            <testOption>-m32</testOption>
                        </testOptions>
                    </cpp>
                    <linker>
                        <name>g++</name>
                        <options>
                            <option>-m32</option>
                        </options>
                    </linker>
                    <libraries>
                        <library>
                            <type>static</type>
                        </library>
                    </libraries>
                    <tests>
                        <test>
                            <name>ZscriptGeneratedCodeTest</name>
                            <link>static</link>
                            <run>true</run>
                        </test>
                    </tests>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>build-native</id>
            <properties>
                <build-native-gcc.skip>false</build-native-gcc.skip>
            </properties>
        </profile>
        <profile>
            <id>build-arduino</id>
            <properties>
                <build-native-gcc.skip>false</build-native-gcc.skip>
            </properties>
        </profile>
        <profile>
            <id>build-arm</id>
            <properties>
                <build-native-gcc.skip>false</build-native-gcc.skip>
            </properties>
        </profile>
    </profiles>
</project>
